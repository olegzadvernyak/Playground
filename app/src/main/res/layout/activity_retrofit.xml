<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/executeCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute call"/>

    <Button
        android:id="@+id/enableBlockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable block"/>

    <Button
        android:id="@+id/disableBlockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable block"/>

    <Button
        android:id="@+id/disableSomeServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable some service"/>

</LinearLayout>